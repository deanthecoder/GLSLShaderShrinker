<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Shrinker.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:Views="clr-namespace:Shrinker.Avalonia.Views"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="620"
        MinWidth="800" MinHeight="600"
        x:Class="Shrinker.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/App.ico"
        Background="{DynamicResource MaterialPaperBrush}"
        Padding="4"
        Title="GLSL Shader Shrinker">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <Style Selector="Avalonia|MaterialIcon">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
        </Style>
        <Style Selector="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,6"/>
        </Style>
        <Style Selector="Border.class">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialPrimaryLightBrush}" />
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="4" />
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Project web link https://github.com/deanthecoder/GLSLShaderShrinker -->
        <Button Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Margin="8,2" VerticalAlignment="Top"
                Content="Project Page"/>
        
        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Top">
            <!-- Import Options -->
            <Border Classes="class" Margin="4,8,4,4">
                <StackPanel>
                    <TextBlock Text="Step 1 - GLSL Import" FontSize="10" Margin="4"/>
                    <Button ToolTip.Tip="From Clipboard" Margin="16,2">
                        <Avalonia:MaterialIcon Kind="ClipboardArrowDown" />
                    </Button>
                    <Button ToolTip.Tip="From File..." Margin="16,2">
                        <Avalonia:MaterialIcon Kind="FileDownload" />
                    </Button>
                    <Button ToolTip.Tip="From Shadertoy" Margin="16,2">
                        <Avalonia:MaterialIcon Kind="CloudDownload" />
                    </Button>
                </StackPanel>
            </Border>

            <!-- Shrink Options -->
            <Border Classes="class">
                <StackPanel>
                    <TextBlock Text="Step 2 - Shrink" FontSize="10" Margin="4" />
                    <Button ToolTip.Tip="Maximum" Margin="16,2">
                        <Avalonia:MaterialIcon Kind="ArrowCollapse" />
                    </Button>
                    <Button ToolTip.Tip="Minimum (/Reformat)" Margin="16,2">
                        <Avalonia:MaterialIcon Kind="FormatAlignLeft" />
                    </Button>
                    <Button ToolTip.Tip="Custom" Margin="16,2">
                        <Avalonia:MaterialIcon Kind="FormatListChecks" />
                    </Button>
                </StackPanel>
            </Border>

            <!-- Export Options -->
            <Border Classes="class">
                <StackPanel>
                    <TextBlock Text="Step 3 - GLSL Export" FontSize="10" Margin="4" />
                    <StackPanel Margin="8,8,8,0">
                        <RadioButton Content="GLSL" />
                        <RadioButton Content="C-Style" />
                    </StackPanel>

                    <Button ToolTip.Tip="To Clipboard (CTRL+C)" Margin="16,2">
                        <Avalonia:MaterialIcon Kind="ClipboardArrowRight" />
                    </Button>
                    <Button x:Name="ToFileButton" ToolTip.Tip="To File..." Margin="16,2">
                        <Avalonia:MaterialIcon Kind="FileSend" />
                    </Button>
                    
                    <Button ToolTip.Tip="Hints and Tips..." Margin="16,16,16,2">
                        <Avalonia:MaterialIcon Kind="MessageBulleted" />
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>

        <Border Grid.Row="1" Grid.Column="1"
                BorderThickness="1" BorderBrush="{DynamicResource MaterialPrimaryLightBrush}"
                Margin="8" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                    
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.Styles>
                    <Style Selector="ListBox ListBoxItem">
                        <Setter Property="Padding" Value="0" />
                    </Style>
                    <Style Selector="TextBlock">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="TextAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="2"/>
                    </Style>
                </Grid.Styles>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="Original" Margin="0,0,1,4"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="New" Margin="1,0,0,4" />

                <ScrollViewer Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                              VerticalScrollBarVisibility="Visible">
                    <ItemsControl ItemsSource="{Binding Diffs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Views:CodeLineControl Grid.Column="0" Diff="{Binding LeftDiff}"/>
                                    <Views:CodeLineControl Grid.Column="1" Diff="{Binding RightDiff}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
